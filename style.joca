/*************
  Footer
*************/

footer {
    background-color: var(--primary);
    color: var(--white);
    padding: var(--padding);
    display: flex;
    justify-content: space-between;
    flex-wrap: wrap;
}

footer article {
    flex: 0 0 23%;
}

footer article h4 {
    font-size: 25px;
    margin-bottom: 20px;
}

footer article .icon {
    display: flex;
    align-items: center;
}

footer article img {
    width: 40px;
    margin-right: 15px;
}

footer .social img {
    width: 25px;
}

footer .social .icon i {
    font-size: 25px;
    margin-right: 10px;
}

/*************
  Responsive
*************/

@media screen and (max-width: 768px) {
    h1 {
        font-size: 60px;
    }

    .about {
        padding: 100px 20px 50px;
    }

    .about article {
        flex-direction: column-reverse;
    }

    .about .about-intro {
        padding-right: 0;
    }

    .about article .about-slika img {
        border-radius: 0 25px 25px 0;
    }

    .about article .about-tekst h3 {
        margin-top: 30px;
        text-transform: capitalize;
        text-align: center;
    }

    .about article .about-tekst p {
        text-align: justify;
    }

    .screenshot article .screenshot-slika {
        flex: 0 0 100%;
    }

    .screenshot article .screenshot-levo-dugme,
    .screenshot article .screenshot-desno-dugme {
        order: 1;
    }

    .screenshot article .screenshot-levo-dugme span,
    .screenshot article .screenshot-desno-dugme span {
        padding: 10px 35px;
        margin: 0 10px;
    }

    .screenshot article {
        margin-bottom: 50px;
    }

    .services article .services-slika {
        flex: 0 0 48%;
    }

    .blog .blog-postovi article {
        flex: 0 0 100%;
        text-align: left;
    }

    .forma form {
        width: 80%;
    }

    footer article {
        flex: 0 0 50%;
        text-align: center;
        margin-bottom: 30px;
    }

    footer article .icon {
        justify-content: center;
    }
}

@media screen and (max-width: 576px) {
    h1 {
        font-size: 50px;
    }

    header {
        flex-direction: column;
    }

    header nav ul li {
        margin: 20px 15px 0;
    }

    .hero {
        padding-bottom: 150px;
    }

    .services article .services-slika {
        flex: 0 0 100%;
    }

    .blog .blog-postovi article .blog-meta {
        display: block;
    }

    .blog .blog-postovi article .blog-meta p:nth-child(2),
    .blog .blog-postovi article .blog-meta p:nth-child(3) {
        display: inline;
    }

    .blog .blog-postovi article {
        background-color: lightgray;
        padding: 10px;
    }

    .forma form {
        width: 100%;
    }

    footer article {
        flex: 0 0 100%;
    }
}