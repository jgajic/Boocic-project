@import url('https://fonts.googleapis.com/css2?family=Poppins:ital,wght@0,300;0,400;0,500;0,600;1,700&display=swap');

* {
    margin: 0;
    padding: 0;
    box-sizing: border-box;
}

:root {
    --primary: #fc4311;

    --black: #000;
    --white: #fff;

    --textColor1: #ccc;
    --textColor2: #3d3c3c;

    --padding: 30px 50px;
}

html {
    scroll-behavior: smooth;
}

body {
    font-family: 'Poppins', sans-serif;
}

h1 {
    color: var(--white);
    font-size: 70px;
    line-height: 70px;
    font-weight: bold;
    padding: 40px 0;
    /* margin-bottom: 40px; */
}

h2 {
    color: var(--black);
    font-size: 40px;
    line-height: 46px;
    font-weight: bold;
}

h3 {
    font-size: 36px;
    padding-bottom: 30px;
    line-height: 37px;
    text-transform: uppercase;
    font-weight: 400;
}

p {
    font-size: 17px;
    color: var(--textColor2);
}

a {
    color: var(--white);
    text-decoration: none;
}

img {
    width: 100%;
}

.dugme {
    text-transform: uppercase;
    background: var(--primary);
    padding: 12px 40px;
    font-weight: 500;
    font-size: 17px;
    line-height: 30px;
    color: var(--white);
    margin-top: 40px;
}

.dugme:hover {
    background: var(--white);
    color: var(--primary);
    border-radius: 30%;
}

