/****************
    Header
****************/

header {
    background-color: var(--primary);
    padding: var(--padding);
    display: flex;
    justify-content: space-between;
    align-items: center;

    .logo {
        text-transform: uppercase;
        font-size: 40px;
        font-weight: bold;
        color: var(--white);
        line-height: 40px;
    }

    .nav {
        ul {
            list-style: none;
            display: flex;

            li {
                margin-left: 30px;

                a:hover {
                    color: var(--black);
                }
            }
        }
    }
}


/****************
    Hero
****************/

.hero {
    background-image: url(img/banner2.jpg);
    background-size: cover;
    background-position: center;
    padding: var(--padding);
    text-align: center;
    display: flex;
    flex-direction: column;
    justify-content: center;
    align-items: center;
    min-height: 75vh;
}

.hero p {
    color: var(--white);
}

/**************
  About
**************/

.about {
    padding: var(--padding);
    text-align: center;
    padding-top: 50px;
    padding-right: 20px;
    position: relative;

    .ikonicaNaDole {
        position: absolute;
        width: 100px;
        top: -50px;
        left: calc(50% - 50px);
    }

    .about-intro {
        padding-right: 130px;
    }

    article {
        display: flex;
        justify-content: space-between;
        margin-top: 50px;

        div {
            flex: 0 0 49%;
        }

        .about-tekst {
            text-align: left;
            display: flex;
            flex-direction: column;
            justify-content: center;
        }
    }

    .dugme {
        background: var(--black);
        margin-top: 40px;
        display: inline-block;

        &:hover {
            background: var(--primary);
            color: var(--white);
        }
    }


}


hr {
    margin: 15px auto 25px;
    width: 30%;
    height: 1px;
    border: none;
    background-color: var(--primary);
}

/**************
  Screenshot
**************/

.screenshot {
    padding: var(--padding);
    text-align: center;

    p {
        font-size: 14px;
        margin-bottom: 30px;
    }

    article {
        display: flex;
        align-items: center;
        flex-wrap: wrap;
        justify-content: center;

        .screenshot-levo-dugme,
        .screenshot-desno-dugme {
            flex: 0 0 10%;

            span {
                border: 1px solid red;
                background-color: var(--black);
                color: var(--white);
                padding: 20px 25px;
                font-size: 25px;
                font-weight: 600;

                &:hover {
                    background-color: var(--primary);
                    cursor: pointer;
                }
            }
        }

        .screenshot-slika {
            flex: 0 0 80%;

        }


    }

    a {
        background-color: var(--black);

        &:hover {
            background-color: var(--primary);
            color: var(--white);
        }
    }
}



/**************
  Services
**************/

.services {
    padding: var(--padding);
    text-align: center;
    background-color: var(--textColor1);
}

.services h2 {
    color: var(--primary);
}

.services article {
    margin-top: 30px;
    display: flex;
    flex-wrap: wrap;
    justify-content: space-between;
}

.services article .services-slika {
    flex: 0 0 30%;
    margin-bottom: 30px;
}

.services article .services-slika img {
    border-radius: 30px;
}

/**************
 Blog
**************/

.blog {
    padding: var(--padding);
    text-align: center;
}

.blog .blog-postovi {
    display: flex;
    justify-content: space-between;
    flex-wrap: wrap;
    margin-top: 30px;
}

.blog .blog-postovi article {
    margin-bottom: 30px;
    text-align: left;
    flex: 0 0 48%;
}

.blog .blog-postovi article p {
    font-weight: 300;
}

.blog .blog-postovi article .blog-slika {
    position: relative;
}

.blog .blog-postovi article .blog-slika .blog-slika-datum {
    position: absolute;
    top: 0;
    left: 0;
    background-color: var(--primary);
    color: var(--white);
    padding: 10px 20px;
}

.blog .blog-postovi article .blog-meta {
    display: flex;
}

.blog .blog-postovi article .blog-meta p span {
    color: var(--primary);
}

.blog .blog-postovi article .blog-meta p:nth-child(2) {
    margin-left: auto;
    margin-right: 10px;
}

.blog .blog-postovi article .blog-tekst h4 {
    margin: 15px 0;
    font-size: 25px;
    font-weight: 400;
}

.blog h2 {
    color: black;
    color: var(--primary);
}

/**************
  Forma
**************/

.forma {
    text-align: center;
    background-color: var(--textColor2);
    padding: var(--padding);
}

.forma h2 {
    color: var(--white);
}

.forma hr {
    background-color: var(--white);
    margin-bottom: 50px;
}

.forma form {
    display: flex;
    flex-direction: column;
    width: 40%;
    margin: auto;
    padding: 30px;
    background-color: var(--white);
}

.forma input,
.forma textarea {
    padding: 15px;
    margin-bottom: 20px;
    border: 3px solid var(--textColor1);
    font-family: 'Poppins', sans-serif;
}

